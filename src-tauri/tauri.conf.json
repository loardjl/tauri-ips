{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Arm Ips",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": ["**", "$RESOURCE/**"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.arm-ips.app",
      "resources": ["config/*"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "UJ-Ips",
        "fullscreen": false,
        "resizable": false,
        "decorations": true,
        "visible": false,
        "width": 1280,
        "height": 800
      },
      {
        "width": 400,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "url": "../loader.html",
        "label": "loading",
        "center": true
      }
    ]
  }
}
